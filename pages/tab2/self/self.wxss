/* pages/self/self.wxss */
.contain{
    width: 100%;   
   
}
.user{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: white;
    margin-top: 40rpx;
    border-bottom: 3rpx solid #aaaaaa;
    border-top: 3rpx solid #aaaaaa;
}
.user>view{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
}
.user_info{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.name{
    font-size: 15px;
    color: black;
}
.age{
    font-size: 12px;
    color: #888888;
    margin-top: 20rpx
}
.self_body{
    margin-top: 40rpx;
    background-color: white;
    border-bottom: 3rpx solid #aaaaaa;
    border-top: 3rpx solid #aaaaaa;
}
.self_text{
    font-size: 15px;
    margin-left: 20rpx;
}
.body_item view{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.body_item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-left: 30rpx; 
    padding-top: 30rpx;
    padding-bottom: 30rpx;

}
.slide{
    background-color: #eeeeee;
    width: 100%;
    height: 2rpx;
    margin-left: 30rpx;
}

.user_head{
    width: 120rpx;
    height: 120rpx;
    padding: 20rpx 30rpx 20rpx 0rpx;
}
.self_img{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.arrow_pic{
    width: 50rpx;
    height: 50rpx;
    margin-right: 50rpx;
}
page{
    background-color: #eeeeee;
}