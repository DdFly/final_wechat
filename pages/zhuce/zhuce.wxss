/**index.wxss**/
.zhuce{
    display: flex;
    flex-direction: column;
    padding-top: 50px;
}
.zhuce view{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 10px;
    border-bottom: 1px gray solid;
}
.zhuce input{
    text-align: right;
}
.zhuce button{
    width: 90%;
    margin-top: 20px;
    background: yellow;
}
.zhuce navigator{    
    color: blue;
    font-size: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}